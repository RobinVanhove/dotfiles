bindsym $alt+Shift+9 move container to workspace 9
bindsym $alt+Shift+0 move container to workspace 10
bindsym $alt+Shift+minus move scratchpad

# bind [ and ] to prev, next workspace
bindcode $alt+34 workspace prev 
bindcode $alt+35 workspace next

# Autostart
exec --no-startup-id i3-msg 'workspace 8; exec thunderbird; workspace 1'
exec --no-startup-id i3-msg 'workspace 10; exec riot-desktop; workspace 1'
exec --no-startup-id i3-msg 'workspace 9; exec keepassxc; workspace 1'
exec --no-startup-id i3-msg 'redshift -l 50.8503:4.3517'
exec_always 'mpd'

bindsym $alt+Shift+s sticky toggle

# Use xprop to find class/instance
assign [class="Riot"] 10
assign [class="keepassxc"] 9
for_window [class="^Thunderbird$" instance="^Calendar$"] sticky enable border pixel 1
for_window [class="^Thunderbird$" instance="^Calendar$"] sticky enable border pixel 1
