# set $mod Mod1
set $alt Mod1
set $win Mod4

font pango:hack 10

# Use Mouse+$win to drag floating windows to their wanted position
floating_modifier $win

# start a terminal
bindsym $alt+Return exec konsole
bindsym $alt+f exec firefox

# kill focused window
bindsym $win+q kill

# start dmenu (a program launcher)
#bindsym $alt+d exec rofi -show run
